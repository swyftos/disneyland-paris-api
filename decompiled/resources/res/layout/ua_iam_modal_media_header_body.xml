<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/UrbanAirship.InAppModal.Content.MediaHeaderBody">
    <com.urbanairship.iam.view.MediaView
        android:id="@+id/media"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/UrbanAirship.InAppModal.MediaView.MediaHeaderBody"/>
    <TextView
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:accessibilityHeading="true"
        style="@style/UrbanAirship.InAppModal.Heading.MediaHeaderBody"/>
    <TextView
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/UrbanAirship.InAppModal.Body.MediaHeaderBody"/>
</LinearLayout>
