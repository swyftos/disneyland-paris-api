<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" style="@style/contentsquare_PopUpDialogLayout">
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="18sp"
        android:textColor="@color/contentsquare_black"
        android:id="@+id/deactivation_dialog_title"
        android:paddingLeft="@dimen/contentsquare_value_8dp"
        android:paddingRight="@dimen/contentsquare_value_8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/contentsquare_deactivation_dialog_title"
        android:layout_alignParentTop="true"
        android:lineSpacingExtra="4sp"
        android:paddingStart="@dimen/contentsquare_value_8dp"
        android:paddingEnd="@dimen/contentsquare_value_8dp"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="14sp"
        android:textColor="@color/contentsquare_black"
        android:id="@+id/deactivation_dialog_summary"
        android:paddingLeft="@dimen/contentsquare_value_8dp"
        android:paddingRight="@dimen/contentsquare_value_8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/contentsquare_value_16dp"
        android:text="@string/contentsquare_deactivation_dialog_summary"
        android:layout_below="@+id/deactivation_dialog_title"
        android:lineSpacingExtra="4sp"
        android:paddingStart="@dimen/contentsquare_value_8dp"
        android:paddingEnd="@dimen/contentsquare_value_8dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:textSize="14sp"
        android:id="@+id/deactivation_window_cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/contentsquare_value_64dp"
        android:text="@string/contentsquare_deactivation_dialog_cancel"
        android:layout_below="@+id/deactivation_dialog_summary"
        android:layout_toStartOf="@+id/deactivation_window_disable_button"
        android:layout_toEndOf="@+id/deactivation_window_disable_button"
        style="@style/Widget.AppCompat.Button.Borderless"/>
    <androidx.appcompat.widget.AppCompatButton
        android:textSize="14sp"
        android:id="@+id/deactivation_window_disable_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contentsquare_deactivation_dialog_disable"
        android:layout_below="@+id/deactivation_dialog_summary"
        android:layout_alignTop="@+id/deactivation_window_cancel_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"/>
</RelativeLayout>
