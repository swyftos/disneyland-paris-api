<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:importantForAccessibility="yes"
    style="@style/UrbanAirship.PreferenceCenter.Item.Preference">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:id="@+id/ua_pref_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"
            style="@style/UrbanAirship.PreferenceCenter.Item.PreferenceTitle"/>
        <TextView
            android:id="@+id/ua_pref_description"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"
            style="@style/UrbanAirship.PreferenceCenter.Item.PreferenceDescription"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ua_pref_widget"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        style="@style/UrbanAirship.PreferenceCenter.Item.Widget"/>
</LinearLayout>
