<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/contentsquare_feature_flags_settings_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/contentsquare_value_16dp">
    <com.contentsquare.android.analytics.internal.features.clientmode.ui.settings.components.ContentsquareSwitchPreference
        android:id="@+id/contentsquare_override_feature_flags_preference"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/contentsquare_value_24dp"
        app:contentsquare_summary="@string/contentsquare_developer_feature_flags_settings_switch_summary"
        app:contentsquare_title="@string/contentsquare_developer_feature_flags_settings_switch_title"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/contentsquare_override_feature_flags_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
