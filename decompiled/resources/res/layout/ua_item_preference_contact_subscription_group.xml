<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:importantForAccessibility="no"
    style="@style/UrbanAirship.PreferenceCenter.Item.Preference">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="yes"
            android:screenReaderFocusable="true">
            <TextView
                android:id="@+id/ua_pref_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/UrbanAirship.PreferenceCenter.Item.PreferenceTitle"/>
            <TextView
                android:id="@+id/ua_pref_description"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/UrbanAirship.PreferenceCenter.Item.PreferenceDescription"/>
        </LinearLayout>
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/ua_pref_chip_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/UrbanAirship.PreferenceCenter.Item.Widget.SubscriptionTypeChipGroup"/>
    </LinearLayout>
</LinearLayout>
